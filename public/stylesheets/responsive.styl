@import "colors.styl"

@media (max-width: 979px)

	#githubRibbon
		display none

	#go-top
		.text
			display none

	#content
		#sidebar
			padding-top 20px
			position static
		section
			padding 20px 0
			&.active
				.page-header
					i
						right 10px


@media (min-width: 979px)

	#superbar
		.navbar-inner
			.brand, .nav > li > a
				padding-top 14px
				padding-bottom 14px

	#content
		padding-top 60px
		#sidebar
			padding-top 60px
			li
				&.active
					a
						margin-left -10px
		section
			padding 40px 0
			ul, p
				padding-right: 150px
			&.active
				.page-header
					i
						right 40px
