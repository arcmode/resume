body
  	font-family "Lucida Grande", Helvetica, Arial, sans-serif

.page-header
	border-bottom-color lineColor

.btn-primary
	background-color lighten(baseColor, 5%)
	&:hover
		background-color baseColor

#content
	overflow hidden
	a
		-webkit-transition 0.5s
		-moz-transition 0.5s
		transition 0.5s
		&:hover
			text-decoration none
	section
		.page-header
			position relative
			-webkit-transition 1s
			-moz-transition 1s
			transition 1s
			i
				-webkit-transition 1s
				-moz-transition 1s
				transition 1s
				position absolute
				color: baseColor
				opacity 0
				right -200px
		ul, p, form
			position relative
		&.active
			.page-header
				color analogicColor
				i
					opacity 0.2
				&:after
					content ' =>'