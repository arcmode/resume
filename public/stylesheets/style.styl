@import "bootstrap.min.css"
@import "bootswatch.css"
@import "bootstrap-responsive.min.css"
@import "responsive.styl"
@import "colors.styl"
@import "navbar.styl"
@import "contact.styl"
@import "footer.styl"
@import "loading.styl"
@import "go-top.styl"

@import "opacity.styl"


body
  	font-family: "Lucida Grande", Helvetica, Arial, sans-serif

.page-header
	border-bottom-color lineColor

.btn-primary
	background-color lighten(baseColor, 5%)
	&:hover
		background-color baseColor

*
	border none

#content
	a
		-webkit-transition 0.5s
		-moz-transition 0.5s
		transition 0.5s
		&:hover
			text-decoration none
	section
		padding 50px 0
		.page-header
			position relative
			i
				position absolute
				top: -20px
				right 40px
				// text-shadow: 1px 1px 1px darken(complementColor, 60%);
				color: analogicColor
				opacity 0.1
		ul, p
			position relative
		&.active
			-webkit-transition 1s
			-moz-transition 1s
			transition 1s
			.page-header
				-webkit-transition 2s
				-moz-transition 2s
				transition 2s
				&:after
					content ' =>'
